{
  "manifest_version": 3,
  "name": "Project BugSlayer",
  "version": "2.0",
  "description": "A hybrid vulnerability scanner that performs passive audits and active, ML-powered input scanning.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [ "vuln_db.json" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}